{
  "manifest_version": 2,

  "name": "Ontology web wallet",
  "author": "Matus Zamborsky <zamborsky@gmail.com>",
  "description": "Ontology ID & wallet",
  "version": "0.4.1",

  "browser_action": {
    "default_title": "Open the wallet"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "file://*/*",
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "/static/js/content.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "32": "logo32.png",
    "48": "favicon.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "http://127.0.0.1/*","webRequest","webRequestBlocking"
  ]
}