{
  "manifest_version": 2,

  "name": "Ontology web wallet",
  "author": "Matus Zamborsky <zamborsky@gmail.com>",
  "description": "Chrome plugin for Ontology wallet",
  "version": "0.2.1",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Open the popup"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "icons": {
    "32": "logo32.png",
    "48": "favicon.png",
    "128": "logo.png"
  },
  "permissions": [
    "storage",
    "http://127.0.0.1/*","webRequest","webRequestBlocking"
  ]
}